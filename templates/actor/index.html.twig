{% extends 'base.html.twig' %}

{% block title %}Actor index 00{% endblock %}

{% block body %}

<h1>Actor index</h1>

<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Admin</th>
        </tr>
    </thead>
    <tbody>
        {% for actor in actors %}
        {#
        <pre>
            {{ dump(actor.programm) }}
        </pre> #}
        <tr>
            <td>{{ actor.id }}</td>
            <td>{{ actor.name }}</td>
            {% for serie in actor.programm %}
            <td> {{ serie.title }} </td><br>

            {% endfor %}
            <td>
                <a href="{{ path('actor_show', {'id': actor.id}) }}">details</a>
                <a href="{{ path('actor_edit', {'id': actor.id}) }}">edit</a>
            </td>
        </tr>
        {% else %}
        <tr>
            <td colspan="3">no records found</td>
        </tr>
        {% endfor %}
    </tbody>
</table>

<a href="{{ path('actor_new') }}">Create new</a>
{% endblock %}